# Etapa 1: Construcción (instalación de dependencias)
FROM node:22-alpine AS build

# Establecer directorio de trabajo
WORKDIR /app

# Copiar los archivos del proyecto
COPY package*.json ./

# Instalar dependencias (solo producción si no necesitas dev)
RUN npm install --production

# Copiar el resto del código fuente
COPY . .

# Etapa 2: Ejecución
FROM node:22-alpine

WORKDIR /app

# Copiar los archivos desde la etapa anterior
COPY --from=build /app /app

# Variables de entorno por defecto
ENV NODE_ENV=production
ENV PORT=8084

# Exponer el puerto del servicio (cambia según el microservicio)
EXPOSE 8084

# Comando de inicio
CMD ["node", "api.js"]
